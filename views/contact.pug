extends base.pug

block scripts
  script(src='/jquery.js')

block style 
  style 
    include ../public/style.css 
    include ../public/stylecontact.css 

block content
  div.container
    h1 Contact Us 
    form(action="/contact", method="post", class="myform") 
      input(type="text", class="myinput" placeholder="Enter your name")
      input(type="email", class="myinput" placeholder="Enter your e-mail")
      input(type="phone", class="myinput" placeholder="Enter your phone")
      input(type="adress", class="myinput" placeholder="Enter your adress")
      button(class="btn")
